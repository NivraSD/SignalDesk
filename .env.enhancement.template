# SignalDesk Enhancement Environment Variables Template
# Copy this to .env and fill in your values

# ============= VECTOR DATABASE =============
# Choose one: chromadb, pinecone, weaviate
VECTOR_DB_PROVIDER=chromadb

# ChromaDB Configuration
CHROMADB_HOST=http://localhost:8000
CHROMADB_API_KEY=
CHROMADB_COLLECTION=signaldesk_memoryvault

# Pinecone Configuration (if using Pinecone)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX=signaldesk-memoryvault
PINECONE_NAMESPACE=default

# Weaviate Configuration (if using Weaviate)
WEAVIATE_HOST=http://localhost:8080
WEAVIATE_API_KEY=
WEAVIATE_CLASS_NAME=MemoryVaultDocument

# ============= EMBEDDING SERVICE =============
# Choose one: openai, anthropic, huggingface, local
EMBEDDING_PROVIDER=openai

# OpenAI (for embeddings)
OPENAI_API_KEY=

# HuggingFace (if using HuggingFace embeddings)
HUGGINGFACE_API_KEY=

# ============= WEBSOCKET =============
WEBSOCKET_PORT=3001
WEBSOCKET_CORS_ORIGIN=http://localhost:3000,https://signaldesk-frontend.vercel.app

# ============= REDIS (for caching) =============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============= RAILWAY UI =============
UI_THEME=dark
UI_ACCENT_COLOR=#8b5cf6
UI_ENABLE_ANIMATIONS=true
UI_PANEL_MIN_WIDTH=200
UI_PANEL_MAX_WIDTH=800

# ============= AI ASSISTANT =============
AI_ASSISTANT_DEFAULT_MODE=adaptive
AI_ASSISTANT_CONTEXT_WINDOW=100000
AI_ASSISTANT_RESPONSE_STREAMING=true
AI_ASSISTANT_MAX_RETRIES=3

# ============= CAMPAIGN ORCHESTRATOR =============
ORCHESTRATOR_ENABLED=true
ORCHESTRATOR_DEFAULT_TIMEZONE=America/New_York
ORCHESTRATOR_MAX_CONCURRENT_TASKS=10
ORCHESTRATOR_TASK_TIMEOUT_MS=300000

# ============= MONITORING =============
MONITORING_ENABLED=true
MONITORING_LOG_LEVEL=info
MONITORING_METRICS_ENABLED=true
MONITORING_METRICS_PORT=9090

# ============= PERFORMANCE =============
MAX_EMBEDDING_BATCH_SIZE=100
SEMANTIC_SEARCH_CACHE_TTL=3600
VECTOR_SEARCH_LIMIT=50
RELATIONSHIP_DISCOVERY_THRESHOLD=0.7

# ============= FEATURE FLAGS =============
FEATURE_MEMORYVAULT_V2=true
FEATURE_ADAPTIVE_AI=true
FEATURE_RAILWAY_UI=true
FEATURE_CAMPAIGN_ORCHESTRATOR=true
FEATURE_SEMANTIC_SEARCH=true
FEATURE_RELATIONSHIP_MAPPING=true