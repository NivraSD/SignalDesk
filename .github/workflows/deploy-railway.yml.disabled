name: Deploy to Railway

on:
  push:
    branches: [main]
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest
    
    steps:
      - uses: actions/checkout@v3
      
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'
          
      - name: Install Railway CLI
        run: npm install -g @railway/cli
        
      - name: Deploy Backend to Railway
        env:
          RAILWAY_TOKEN: ${{ secrets.RAILWAY_TOKEN }}
        run: |
          cd backend
          railway link
          railway up --detach
          
      - name: Set Railway Environment Variables
        env:
          RAILWAY_TOKEN: ${{ secrets.RAILWAY_TOKEN }}
          CLAUDE_API_KEY: ${{ secrets.CLAUDE_API_KEY }}
          JWT_SECRET: ${{ secrets.JWT_SECRET }}
          GOOGLE_API_KEY: ${{ secrets.GOOGLE_API_KEY }}
          NEWS_API_KEY: ${{ secrets.NEWS_API_KEY }}
          TWITTER_BEARER_TOKEN: ${{ secrets.TWITTER_BEARER_TOKEN }}
        run: |
          railway variables set CLAUDE_API_KEY="$CLAUDE_API_KEY" --service signaldesk-backend
          railway variables set CLAUDE_MODEL="claude-3-5-sonnet-20241022" --service signaldesk-backend
          railway variables set JWT_SECRET="$JWT_SECRET" --service signaldesk-backend
          railway variables set GOOGLE_API_KEY="$GOOGLE_API_KEY" --service signaldesk-backend
          railway variables set NEWS_API_KEY="$NEWS_API_KEY" --service signaldesk-backend
          railway variables set TWITTER_BEARER_TOKEN="$TWITTER_BEARER_TOKEN" --service signaldesk-backend
          railway variables set NODE_ENV="production" --service signaldesk-backend
          
      - name: Verify Deployment
        env:
          RAILWAY_TOKEN: ${{ secrets.RAILWAY_TOKEN }}
        run: |
          railway status
          echo "Deployment completed successfully!"