const express = require('express');
const router = express.Router();
const { authMiddleware } = require('../middleware/auth');
const monitoringController = require('../controllers/monitoringController');

// Apply auth middleware to all monitoring routes
router.use(authMiddleware);

// Analyze sentiment for a single mention
router.post('/analyze-sentiment', monitoringController.analyzeSentiment);

// Batch analyze multiple mentions
router.post('/analyze-batch', monitoringController.analyzeBatch);

// Save monitoring configuration
router.post('/config', monitoringController.saveConfig);
router.get('/config', monitoringController.getConfig);

// Save analyzed mentions
router.post('/mentions', monitoringController.saveMentions);
router.get('/mentions', monitoringController.getMentions);

// Export data
router.post('/export', monitoringController.exportData);

module.exports = router;
